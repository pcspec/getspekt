<%= form_for @user, url: {action: "create"} do |f| %>
  <% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
  <% end %>
  <%= f.text_field :email %>
  <%= f.password_field :password %>
  <%= f.submit "Create" %>
<% end %>
